{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": {
      "type": "swc",
      "options": {
        "jsc": {
          "parser": {
            "syntax": "typescript",
            "tsx": true
          },
          "transform": {
            "react": {
              "runtime": "automatic"
            }
          },
          "target": "es2022"
        },
        "module": {
          "type": "commonjs"
        },
        "extensions": [".ts", ".tsx", ".js", ".jsx"]
      }
    },
    "typeCheck": true
  }
}
